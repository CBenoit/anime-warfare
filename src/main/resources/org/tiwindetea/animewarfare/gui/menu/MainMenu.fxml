<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import org.tiwindetea.animewarfare.gui.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import org.tiwindetea.animewarfare.gui.PaperButton?>

<AnchorPane styleClass="mainMenuBackground" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tiwindetea.animewarfare.gui.menu.MainMenuController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <left>
            <VBox fx:id="buttonContainer" alignment="CENTER" onKeyReleased="#handleFocusRequest" spacing="20.0" styleClass="vBoxMainMenu" BorderPane.alignment="CENTER">
               <children>
                  <PaperButton fx:id="playButton" mnemonicParsing="false" onAction="#handlePlay" onMouseEntered="#handleMouseEnteredEvent" onMouseExited="#handleMouseExitedEvent" text="%button.play" />
                  <PaperButton mnemonicParsing="false" onAction="#handleSettings" onMouseEntered="#handleMouseEnteredEvent" onMouseExited="#handleMouseExitedEvent" text="%button.settings" />
                  <PaperButton mnemonicParsing="false" onAction="#handleAbout" onMouseEntered="#handleMouseEnteredEvent" onMouseExited="#handleMouseExitedEvent" text="%button.about" />
                  <PaperButton mnemonicParsing="false" onAction="#handleQuit" onMouseEntered="#handleMouseEnteredEvent" onMouseExited="#handleMouseExitedEvent" text="%button.quit" />
               </children>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
               <BorderPane.margin>
                  <Insets left="50.0" />
               </BorderPane.margin>
            </VBox>
         </left>
      </BorderPane>
   </children>
</AnchorPane>
