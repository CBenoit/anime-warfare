<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tiwindetea.animewarfare.gui.menu.ServersListController">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
             <TableView fx:id="roomsTableView" prefHeight="400.0" prefWidth="726.0" styleClass="serverList"
                        HBox.hgrow="ALWAYS">
              <columns>
                  <TableColumn fx:id="chatroomsNamesList" editable="false" prefWidth="138.0"
                               text="%tablecolumn.name.server"/>
                <TableColumn fx:id="numberOfUsersList" editable="false" minWidth="6.0" prefWidth="131.0" text="%tablecolumn.number.players" />
                  <TableColumn fx:id="passwordsList" editable="false" text="%tablecolumn.exist.password"/>
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
             <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="326.0">
               <children>
                   <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS">
                       <children>
                           <Button mnemonicParsing="false" onAction="#handleRefresh" text="%button.refresh"/>
                           <Button mnemonicParsing="false" onAction="#handleConnect" text="%button.connect"/>
                           <Button mnemonicParsing="false" onAction="#handleConnectIp" text="%button.connectip"/>
                           <Button mnemonicParsing="false" onAction="#handleHost" text="%button.host"/>
                       </children>
                   </VBox>
                   <VBox alignment="BOTTOM_RIGHT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="NEVER">
                       <children>
                           <Button cancelButton="true" mnemonicParsing="false" onAction="#handleQuit"
                                   text="%button.quit"/>
                       </children>
                   </VBox>
                   <Button mnemonicParsing="false" onAction="#handleConnectIp" text="%button.connectip"/>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
