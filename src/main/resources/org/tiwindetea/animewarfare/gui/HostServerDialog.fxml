<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="169.0" minWidth="10.0" prefWidth="145.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="165.0" minWidth="10.0" prefWidth="92.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="%label.servername" />
                <Label text="%label.players.number.max" GridPane.rowIndex="1" />
                <TextField fx:id="serverNameTextField" GridPane.columnIndex="1" />
                <TextField fx:id="numberOfPlayersTextField" onKeyTyped="#handleNumeralsOnlyTextChanged" prefHeight="25.0" prefWidth="473.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <TextField fx:id="passwordTextField" />
               </children>
            </VBox>
            <CheckBox fx:id="passwordCheckBox" mnemonicParsing="false" text="%checkbox.password" GridPane.rowIndex="2" />
            <Label text="%label.port.tcp" GridPane.rowIndex="3" />
            <TextField fx:id="tcpPortTextField" onKeyTyped="#handleNumeralsOnlyTextChanged" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="5.0">
            <children>
            <Button mnemonicParsing="false" onAction="#handleCancel" text="%button.cancel" />
                <Button defaultButton="true" mnemonicParsing="false" onAction="#handleStart" text="%button.start" />
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </children>
</VBox>
